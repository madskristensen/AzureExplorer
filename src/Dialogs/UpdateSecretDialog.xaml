<platformUI:DialogWindow x:Class="AzureExplorer.Dialogs.UpdateSecretDialog"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:platformUI="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                        xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
                        toolkit:Themes.UseVsTheme="True"
                        Title="Update Secret"
                        Width="400"
                        Height="180"
                        WindowStartupLocation="CenterOwner"
                        ShowInTaskbar="False"
                        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="SecretNameLabel" Text="New value for:" Margin="0,0,0,4" />
        <PasswordBox Grid.Row="1" x:Name="SecretValueBox" Margin="0,0,0,12" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Update" Width="75" Margin="0,0,8,0" IsDefault="True" Click="OnUpdateClick" />
            <Button Content="Cancel" Width="75" IsCancel="True" />
        </StackPanel>
    </Grid>
</platformUI:DialogWindow>
